<!DOCTYPE html>
<html>

<head>
    <title>ISO Risk Evaluation Software</title>
    <%- include('library.ejs') -%>
</head>

<body>
    <%- include('menu.ejs') -%>
        <br>
        </br>
        <br>
        </br>
        <div id="login">
            <h3 class="text-center pt-5">
                <%= data.pageName %>
            </h3>
            <div class="container">
                <form class="form" action="/work/create/3" method="POST">
                    <div id="table" class="table-responsive">
                        <table class="table table-striped ">
                            <thead>
                                <tr>
                                    <th>พื้นที่ภายใน</th>
                                    <th>พื้นที่ภายนอก</th>
                                </tr>
                            </thead>
                            <tr>
                                <td>
                                    <% data.department.areas.forEach(area => { %>
                                        <% if (area.areaType == 'inside') { %>
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input inside" name="insideAreas" value="" data-id="<%= area._id %>">
                                                <label class="form-check-label" for="insideAreas"><%= area.name %></label>
                                            </div>
                                            <% } });%>
                                </td>
                                <td>
                                    <% data.department.areas.forEach(area => { %>
                                        <% if (area.areaType == 'outside') { %>
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input outside" name="outsideAreas" value="" data-id="<%= area._id %>">
                                                <label class="form-check-label" for="outsideAreas"><%= area.name %></label>
                                            </div>
                                            <% } });%>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="form-group">
                        <input type="submit" name="work" class="btn btn-info btn-md next" value="Next" data-id="<%= data.work._id %>">
                    </div>
                </form>
            </div>
        </div>
</body>

</html>

<script>
    $(document).ready(function() {
        $('.inside').click(function() {
            var id = $(this).data("id");
            if ($(this).is(':checked')) {
                $(this).val(id);
            } else {
                $(this).val("");
            }
        });

        $('.outside').click(function() {
            var id = $(this).data("id");
            if ($(this).is(':checked')) {
                $(this).val(id);
            } else {
                $(this).val("");
            }
        });

        $('.next').click(function() {
            var id = $(this).data("id");
            $(this).val(id);
        })
    });
</script>