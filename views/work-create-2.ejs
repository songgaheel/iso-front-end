<!DOCTYPE html>
<html>

<head>
    <title>ISO Risk Evaluation Software</title>
    <%- include('library.ejs') -%>
</head>

<body>
    <%- include('menu.ejs') -%>
        <br>
        </br>
        <br>
        </br>
        <div id="login">
            <h3 class="text-center pt-5">
                <%= data.pageName %>
            </h3>
            <div class="container">
                <form>
                    <div id="table" class="table-responsive">
                        <table class="table table-striped ">
                            <thead>
                                <tr>
                                    <th>พื้นที่ภายใน</th>
                                    <th>พื้นที่ภายนอก</th>
                                </tr>
                            </thead>
                            <tr>
                                <td>
                                    <% data.department.areas.forEach(area => { %>
                                        <% if (area.areaType == 'inside') { %>
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input" value="">
                                                <label class="form-check-label"><%= area.name %></label>
                                            </div>
                                            <% } });%>
                                </td>
                                <td>
                                    <% data.department.areas.forEach(area => { %>
                                        <% if (area.areaType == 'outside') { %>
                                            <div class="form-check">
                                                <input type="checkbox" class="form-check-input" value="">
                                                <label class="form-check-label"><%= area.name %></label>
                                            </div>
                                            <% } });%>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-info btn-md" value="Next">
                    </div>
                </form>
            </div>
        </div>
</body>

</html>